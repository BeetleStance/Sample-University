<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/cardview_light_background"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/registration_step"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintHorizontal_bias="0.0" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/RollNo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:met_floatingLabel="highlight"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:met_underlineColor="@color/color_material_purple"
        app:met_primaryColor="@color/color_material_purple"
        android:backgroundTint="@color/color_material_purple"
        android:ems="10"
        android:hint="@string/roll_no"
        app:met_floatingLabelText="@string/roll_no"
        android:inputType="text|number"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintTop_toBottomOf="@+id/registration_step" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/father_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:met_floatingLabel="highlight"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:met_underlineColor="@color/color_material_purple"
        app:met_primaryColor="@color/color_material_purple"
        android:backgroundTint="@color/color_material_purple"
        android:ems="10"
        android:hint="@string/father_name"
        app:met_floatingLabelText="@string/father_name"
        android:inputType="textPersonName"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/RollNo"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />


    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:met_floatingLabel="highlight"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:met_underlineColor="@color/color_material_purple"
        app:met_primaryColor="@color/color_material_purple"
        android:backgroundTint="@color/color_material_purple"
        android:ems="10"
        android:hint="@string/email"
        app:met_floatingLabelText="@string/email"
        android:inputType="textEmailAddress"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/father_name"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.0"
        android:visibility="gone"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/phone_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:met_floatingLabel="highlight"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:met_underlineColor="@color/color_material_purple"
        app:met_primaryColor="@color/color_material_purple"
        android:backgroundTint="@color/color_material_purple"
        android:ems="10"
        android:hint="@string/mobile_no"
        app:met_floatingLabelText="@string/mobile_no"
        android:inputType="phone"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/email"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.0"
        android:visibility="gone"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:met_floatingLabel="highlight"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        app:met_underlineColor="@color/color_material_purple"
        app:met_primaryColor="@color/color_material_purple"
        android:backgroundTint="@color/color_material_purple"
        android:ems="10"
        android:visibility="gone"
        android:hint="@string/password"
        app:met_floatingLabelText="@string/password"
        android:inputType="textPassword"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phone_number"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/confirm_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:met_floatingLabel="highlight"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:met_underlineColor="@color/color_material_purple"
        app:met_primaryColor="@color/color_material_purple"
        android:backgroundTint="@color/color_material_purple"
        android:ems="10"
        android:hint="@string/confirm_password"
        app:met_floatingLabelText="@string/confirm_password"
        android:inputType="textPassword"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/password"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:background="@color/color_material_purple"
        android:text="@string/register"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:typeface="sans"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/confirm_password"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="0dp"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp" />
    <ProgressBar
        android:id="@+id/register_progress_Bar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>